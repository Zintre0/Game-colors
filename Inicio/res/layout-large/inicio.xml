<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical" >

    <Button
        android:id="@+id/jugar"
        android:layout_width="fill_parent"
        android:layout_height="54dp"
        android:layout_marginTop="210dp"
        android:layout_weight="0.00"
        android:background="@drawable/play"
        android:gravity="center"
        android:onClick="Play"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/dificultad"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
        android:background="@drawable/butttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:onClick="Dificultad"
        android:text="Dificultad"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/como_jugar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/butttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:onClick="Como_Jugar"
        android:text="Como Jugar"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Score"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/butttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:onClick="Puntajes"
        android:text="Puntajes"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_exit"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="133dp"
        android:layout_height="131dp"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/exit"
        android:onClick="Exit" />

</LinearLayout>